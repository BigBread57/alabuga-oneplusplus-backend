# ===================================================
# Django Settings
# ===================================================
DJANGO_SECRET_KEY=your-secret-key-change-in-production
DEBUG=True
DOMAIN_NAME=localhost
DJANGO_SETTINGS_MODULE=server.settings
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ===================================================
# Database Configuration (PostgreSQL)
# ===================================================
POSTGRES_DB=alabuga_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DJANGO_DATABASE_HOST=postgres
DJANGO_DATABASE_PORT=5432
POSTGRES_NAME=alabuga_db
DJANGO_DATABASE_USER=postgres
DJANGO_DATABASE_PASSWORD=postgres

# ===================================================
# Redis & Celery
# ===================================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ===================================================
# Frontend API URLs
# ===================================================
# For local development
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
API_URL=http://localhost:8000/api/v1

# For production, change to:
# NEXT_PUBLIC_API_BASE_URL=https://your-domain.com
# API_URL=https://your-domain.com/api/v1

# ===================================================
# Security Settings
# ===================================================
DJANGO_SECURE_SSL_REDIRECT=False
DJANGO_SECURE_HSTS_SECONDS=0
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=False
DJANGO_SECURE_HSTS_PRELOAD=False
DJANGO_SECURE_CONTENT_TYPE_NOSNIFF=True
DJANGO_SECURE_BROWSER_XSS_FILTER=True
DJANGO_SESSION_COOKIE_SECURE=False
DJANGO_CSRF_COOKIE_SECURE=False

# ===================================================
# CORS Settings
# ===================================================
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===================================================
# Logging
# ===================================================
LOG_LEVEL=INFO

# ===================================================
# Optional: Sentry Error Tracking
# ===================================================
SENTRY_DSN=

# ===================================================
# Optional: Superuser Auto-creation
# ===================================================
# These credentials will be used to create a superuser on first run
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin
# ===================================================
# Production Environment Variables
# ===================================================
# Copy this file to .env and update with your production values

# ===================================================
# Django Settings
# ===================================================
DJANGO_SECRET_KEY=CHANGE-THIS-TO-RANDOM-SECRET-KEY-IN-PRODUCTION
DEBUG=False
DOMAIN_NAME=your-domain.com

# ===================================================
# Database Configuration (PostgreSQL)
# ===================================================
POSTGRES_DB=alabuga_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE-THIS-STRONG-PASSWORD
DJANGO_DATABASE_HOST=postgres
DJANGO_DATABASE_PORT=5432
POSTGRES_NAME=alabuga_db
DJANGO_DATABASE_USER=postgres
DJANGO_DATABASE_PASSWORD=CHANGE-THIS-STRONG-PASSWORD

# ===================================================
# Redis & Celery
# ===================================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ===================================================
# Frontend API URLs
# ===================================================
NEXT_PUBLIC_API_BASE_URL=https://your-domain.com
API_URL=https://your-domain.com/api/v1

# ===================================================
# Optional: Superuser creation (will be created on first run)
# ===================================================
DJANGO_SUPERUSER_EMAIL=admin@your-domain.com
DJANGO_SUPERUSER_PASSWORD=CHANGE-THIS-SECURE-ADMIN-PASSWORD
